<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/sky"

    android:orientation="vertical"
    tools:context="com.example.priya_000.weatherapp.Details">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="70dp"
               android:textAppearance="?android:attr/textAppearanceLarge"
               android:textColor="#ffffff"
               android:id="@+id/cityView"
               android:gravity="top|center"
               android:textSize="35sp"
               android:inputType="textCapCharacters"
               android:textStyle="bold"
               android:layout_gravity="center_horizontal" />


       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView"

                android:layout_gravity="center_horizontal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:id="@+id/statusView"
                android:padding="5dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="25sp"

                android:gravity="center"
                android:id="@+id/minmaxView"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:id="@+id/tempView"
                android:textSize="70sp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:id="@+id/timeView"
                android:textSize="20sp"
                android:gravity="center"

                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:id="@+id/humidView"
                android:textSize="20sp"
                android:paddingLeft="20dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/abc_list_selector_disabled_holo_dark" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff"
                    android:text="@string/forecast"
                    android:id="@+id/forecastView"

                    android:textSize="25sp"
                    android:gravity="center"
                    android:background="@drawable/abc_list_selector_disabled_holo_dark"
                    android:layout_gravity="center_horizontal" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View

                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/abc_list_selector_disabled_holo_dark" />

            </LinearLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ffffff"
                        android:id="@+id/dayView1"
                        android:textSize="20sp"
                        android:gravity="left"
                        android:layout_weight="2"
                        android:layout_gravity="center_horizontal" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/imgView1"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ffffff"
                        android:id="@+id/tempmaxView1"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ffffff"
                        android:id="@+id/tempminView1"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" />

                </TableRow>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View

                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/abc_list_selector_disabled_holo_dark" />

                </LinearLayout>
                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ffffff"
                        android:id="@+id/dayView2"
                        android:textSize="20sp"
                        android:gravity="left"
                        android:layout_weight="2"
                        android:layout_gravity="center_horizontal" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/imgView2"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ffffff"
                        android:id="@+id/tempmaxView2"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ffffff"
                        android:id="@+id/tempminView2"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" />

                </TableRow>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View

                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/abc_list_selector_disabled_holo_dark" />

                </LinearLayout>
                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ffffff"
                        android:id="@+id/dayView3"
                        android:textSize="20sp"
                        android:gravity="left"
                        android:layout_weight="2"
                        android:layout_gravity="center_horizontal" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/imgView3"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ffffff"
                        android:id="@+id/tempmaxView3"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ffffff"
                        android:id="@+id/tempminView3"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" />

                </TableRow>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View

                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/abc_list_selector_disabled_holo_dark" />

                </LinearLayout>
                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ffffff"
                        android:id="@+id/dayView4"
                        android:textSize="20sp"
                        android:gravity="left"
                        android:layout_weight="2"
                        android:layout_gravity="center_horizontal" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/imgView4"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ffffff"
                        android:id="@+id/tempmaxView4"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ffffff"
                        android:id="@+id/tempminView4"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal" />

                </TableRow>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View

                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/abc_list_selector_disabled_holo_dark" />

                </LinearLayout>

            </TableLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff"
                    android:text="@string/astronomy"
                    android:id="@+id/astronomyView"

                    android:textSize="25sp"
                    android:gravity="center"
                    android:background="@drawable/abc_list_selector_disabled_holo_dark"
                    android:layout_gravity="center_horizontal" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff"
                    android:id="@+id/sunriseView"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff"
                    android:id="@+id/sunsetView"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
