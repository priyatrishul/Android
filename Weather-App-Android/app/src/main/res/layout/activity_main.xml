<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/sky"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">



    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cityList"
        android:background="@drawable/abc_list_selector_disabled_holo_dark"
        android:divider="@drawable/abc_list_selector_background_transition_holo_light"
        android:dividerHeight="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:showText="true"
        android:textColor="#ffffff"
        android:thumbTextPadding="20dp"
        android:id="@+id/switchTemp"
        android:shadowColor="#ffffff"
        android:textOff="\u2103"
        android:textOn="\u2109"
        android:background="@drawable/abc_list_selector_disabled_holo_dark"
        android:switchPadding="15sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:id="@+id/checkBox"

        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/cityList"
        android:layout_alignEnd="@+id/cityList"
        android:layout_alignBottom="@+id/switchTemp" />

</RelativeLayout>
